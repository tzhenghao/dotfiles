alias h='history'
alias cs='clear;ls'
alias null='/dev/null'
alias rm='rm -i'

# Directories
alias dbox='cd ~/Dropbox'
alias docs='cd ~/Documents'
alias dtop='cd ~/Desktop'
alias o=open
alias ..='cd ..'
alias ...='cd ..; cd ..'
alias ....='cd ..; cd ..; cd ..'

# Git Shortcuts
alias g='git'
alias st='git status'
