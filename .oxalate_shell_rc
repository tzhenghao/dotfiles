# Grep options
alias grep='grep --color=auto --exclude=tags --exclude-dir=.git --exclude-dir=venv'

# Ctags.
alias gentags='ctags -R .'

export PATH="/usr/local/sbin:$PATH"

# brew install binutils
export PATH="/opt/homebrew/opt/binutils/bin:$PATH"

# LLVM
# llvm is keg-only, which means it was not symlinked into /opt/homebrew,
# because macOS already provides this software and installing another version in
# parallel can cause all kinds of trouble.

# If you need to have llvm first in your PATH, run:
export PATH="/opt/homebrew/opt/llvm/bin:$PATH"

# To use the bundled libc++ please add the following LDFLAGS:
# LDFLAGS="-L/opt/homebrew/opt/llvm/lib/c++ -Wl,-rpath,/opt/homebrew/opt/llvm/lib/c++"

# For compilers to find llvm you may need to set:
export LDFLAGS="-L/opt/homebrew/opt/llvm/lib"
export CPPFLAGS="-I/opt/homebrew/opt/llvm/include"

# GPG
# shellcheck disable=SC2155
export GPG_TTY=$(tty)

# Count lines in the git repository.
alias countlines='git ls-files | xargs wc -l'

# My daily logs.
alias dailylog='"$EDITOR" +'"'"'r!date'"'"' "$HOME/Dropbox/daily_log.txt"'

# Reformat single and double quotes to ' and ".
reformat_quotes() {
  for file in "$@"
  do
    sed -i -E 's/“/\"/g' "$file"
    sed -i -E 's/”/\"/g' "$file"
    sed -i -E 's/’/'"'"'/g' "$file"
    sed -i -E 's/‘/'"'"'/g' "$file"
  done
}

# For note taking.
notes() {
  if [[ "$#" -eq 0 ]]; then
    less "$HOME/Dropbox/notes.txt"
  else
    echo "$@" >> "$HOME/Dropbox/notes.txt"
  fi
}

# Help with extractions
extract () {
  if [ -f "$1" ] ; then
    case "$1" in
      *.tar.bz2)   tar xvjf "$1"    ;;
      *.tar.gz)    tar xvzf "$1"    ;;
      *.bz2)       bunzip2 "$1"     ;;
      *.rar)       unrar x "$1"     ;;
      *.gz)        gunzip "$1"      ;;
      *.tar)       tar xvf "$1"     ;;
      *.tbz2)      tar xvjf "$1"    ;;
      *.tgz)       tar xvzf "$1"    ;;
      *.zip)       unzip "$1"       ;;
      *.Z)         uncompress "$1"  ;;
      *.7z)        7z x "$1"        ;;
      *)           echo "don't know how to extract '$1'..." ;;
    esac
  else
    echo "'$1' is not a valid file!"
  fi
}
